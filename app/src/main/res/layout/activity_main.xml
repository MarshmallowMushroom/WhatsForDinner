<?xml version="1.0" encoding="utf-8"?>
<!--android.support.constraint.ConstraintLayout-->
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.sjsu.yitong.wfdapp.MainActivity">

    <TableRow>
        <LinearLayout>
            <ImageView
                android:id="@+id/wfdlogo"
                android:layout_width="wrap_content"
                android:layout_height="320dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/logo"/>
        </LinearLayout>
    </TableRow>
    <TableRow
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/meal"
                    android:layout_width="220dp"
                    android:layout_height="100dp"
                    android:src="@drawable/meal" />
                <TextView
                    android:id="@+id/textMeal"
                    android:layout_width="220dp"
                    android:layout_height="45dp"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:text="Meal"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/recipe"
                    android:layout_width="220dp"
                    android:layout_height="100dp"
                    android:src="@drawable/recipe" />
                <TextView
                    android:id="@+id/textRecipe"
                    android:layout_width="220dp"
                    android:layout_height="45dp"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:text="Recipe"/>
            </LinearLayout>
        </LinearLayout>
    </TableRow>
    <TableRow
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/grocery"
                    android:layout_width="220dp"
                    android:layout_height="100dp"
                    android:src="@drawable/grocery" />
                <TextView
                    android:id="@+id/textGrocery"
                    android:layout_width="220dp"
                    android:layout_height="45dp"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:text="Grocery"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/newDish"
                    android:layout_width="220dp"
                    android:layout_height="100dp"
                    android:src="@drawable/newdish" />
                <TextView
                    android:id="@+id/textNewDish"
                    android:layout_width="220dp"
                    android:layout_height="45dp"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:text="New Dish"/>
            </LinearLayout>
        </LinearLayout>
    </TableRow>
</TableLayout>






